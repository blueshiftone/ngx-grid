{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ngx-grid-core": {
      "projectType": "library",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss",
          "skipTests": true,
          "changeDetection": "OnPush"
        },
        "@schematics/angular:application": {
          "strict": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        }
      },
      "root": "projects/ngx-grid-core",
      "sourceRoot": "projects/ngx-grid-core/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-grid-core/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-grid-core/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-grid-core/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        }
      }
    },
    "ngx-grid-toolbar": {
      "projectType": "library",
      "root": "projects/ngx-grid-toolbar",
      "sourceRoot": "projects/ngx-grid-toolbar/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/ngx-grid-toolbar/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ngx-grid-toolbar/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ngx-grid-toolbar/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/ngx-grid-toolbar/src/test.ts",
            "tsConfig": "projects/ngx-grid-toolbar/tsconfig.spec.json",
            "karmaConfig": "projects/ngx-grid-toolbar/karma.conf.js"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
